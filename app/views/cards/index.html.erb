<!-- cards.index.html.erb -->

<!-- shows current_user his or her cards
asks if want to choose from other's user_cards -->
<br>
<h1>Here are your credit cards, <%= "#{@user.fname}" %> </h1>
<table border="1" style="width:100%">
   <tr>    
   	<td><h3>CardType</h3></td>
    <td><h3>CardNumber</h3></td>
    <td><h3>Expiration</h3></td>
    <td><h3>id</h3></td>
    <td><h3>ADD/REMOVE</h3></td>
  </tr>
<% @cards.each do |w| %>
<tr>
	<td><%= w.cardtype %></td>
	<td><%= w.cardnum %></td>   
	<td><%= "#{w.expire_m}  /  #{w.expire_y}" %></td>
	<td><%= w.id %>
	<!-- IF -->
	<td><%=link_to "Add Card", root_path %></td>
	<!-- Else -->
	<!-- IF USER.CARDS INCLUDES W, SHOW REMOVE LINK, ELSE SHOW ADD LINK -->
</tr>
<%end%>
</table>
<br>
<br>
<h1>Other Credit Cards, <%= "#{@user.fname}" %> </h1>
<table border="1" style="width:100%">
 <tr>    
   	<td><h3>CardType</h3></td>
    <td><h3>CardNumber</h3></td>
    <td><h3>Expiration</h3></td>
    <td><h3>id</h3></td>
    <td><h3>ADD/REMOVE</h3></td>
  </tr>
  <% @allcards.each do |w| %>
 <tr>
	<td><%= w.cardtype %></td>
	<td><%= w.cardnum %></td>   
	<td><%= "#{w.expire_m}  /  #{w.expire_y}" %></td>
	<td><%= w.id %>
	<!-- IF -->
	<%= if w.id == @card.where(w.id) %>
		<span
			><td>
				<%=link_to "Remove Card", root_path %>
			</td>
		</span>
	<%= else %>
		<span>
			<td>
				<%=link_to "Add Card", root_path %>
			</td>
		</span>
	<%= end %>
	<!-- Else -->
	<!-- IF USER.CARDS INCLUDES W, SHOW REMOVE LINK, ELSE SHOW ADD LINK -->
 </tr>
<%end%>
</table>
<br>
<br>
